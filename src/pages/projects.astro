---
export async function getStaticPaths() {
  const projects = [
    { 
      slug: "project-01",
      name: "Project 01", 
      year: "2025", 
      type: "Residential",
      description: "Εδώ περιγράφεις αναλυτικά το Project 01. Μπορείς να μιλήσεις για τα υλικά, το concept και την τοποθεσία.",
      image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=1200" 
    },
    { 
      slug: "project-02",
      name: "Project 02", 
      year: "2024", 
      type: "Concept",
      description: "Εδώ περιγράφεις το Project 02. Ανάλυση του σχεδιασμού και της δημιουργικής διαδικασίας.",
      image: "https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=1200" 
    },
    { 
      slug: "project-03",
      name: "Project 03", 
      year: "2023", 
      type: "Interior",
      description: "Λεπτομέρειες για το εσωτερικό design του Project 03.",
      image: "https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?q=80&w=1200" 
    },
  ];

  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<html lang="el">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{project.name} | Argyro Kleniati</title>
</head>
<body style="background: #0b0d10; color: white; font-family: system-ui; padding: 50px;">
  
  <a href="/" style="color: #ff1a2d; text-decoration: none; font-size: 1.2rem;">← Back to Home</a>
  
  <main style="max-width: 1000px; margin: 50px auto;">
    <h1 style="font-family: 'Playfair Display', serif; font-size: 4rem; margin-bottom: 10px;">{project.name}</h1>
    <p style="opacity: 0.6; font-size: 1.2rem; margin-bottom: 40px;">{project.year} • {project.type}</p>
    
    <img src={project.image} alt={project.name} style="width: 100%; border-radius: 8px; margin-bottom: 40px;" />
    
    <div style="font-size: 1.5rem; line-height: 1.6; max-width: 800px;">
      {project.description}
    </div>
  </main>
</body>
</html>